<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="620" prefWidth="860" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nurishapp.view.NutritionCalculatorController">

    <top>
        <VBox alignment="CENTER" spacing="8">
            <padding><Insets bottom="12" left="18" right="18" top="18" /></padding>
            <Label style="-fx-font-size:22px; -fx-font-weight:bold;" text="Nutrition Calculator" />
            <Label style="-fx-font-size:13px;" text="Calculate nutrition in your diet!" />
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets bottom="10" left="18" right="18" top="10" /></padding>

            <!-- Ingredients header -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label style="-fx-font-size:14px; -fx-font-weight:bold;" text="Ingredients:" />
                <Button fx:id="addIngredientBtn" onAction="#handleAddIngredient" text="+ Add" />
                <Button fx:id="removeLastBtn" onAction="#handleRemoveLast" text="Remove last" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="clearBtn" onAction="#handleClearAll" text="Clear all" />
            </HBox>

            <!-- Ingredients list -->
            <ScrollPane fitToWidth="true" minHeight="-Infinity" prefHeight="80.0" style="-fx-background-color:transparent;">
                <content>
                    <VBox fx:id="ingredientsBox" spacing="8" />
                </content>
            </ScrollPane>

            <!-- Actions -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="calculateBtn" onAction="#handleCalculate" text="Calculate" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox fx:id="resultsPane" spacing="10" visible="false">
            <padding><Insets bottom="18" left="18" right="18" top="10" /></padding>

            <HBox alignment="CENTER_LEFT" spacing="18">
                <VBox spacing="6">
                    <Label fx:id="totalsTitle" style="-fx-font-size:16px; -fx-font-weight:bold;" />
                    <Label fx:id="totalCaloriesLabel" />
                    <Label fx:id="totalCarbsLabel" />
                    <Label fx:id="totalProteinLabel" />
                    <Label fx:id="totalFatLabel" />
                </VBox>

                <Region HBox.hgrow="ALWAYS" />
                <PieChart fx:id="macroChart" prefHeight="240" prefWidth="320" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size:13px;" text="Add this delicious meal into your account!" />
                <Button fx:id="addMealBtn" onAction="#handleAddMeal" text="Add to My Foods" />
                <Button fx:id="nextBtn" onAction="#handleResetForNext" text="Calculate next one" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
