<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="8" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nurishapp.view.EditFoodDialogController">
    <padding><Insets topRightBottomLeft="12" /></padding>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="categoryBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Serving unit:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="servingUnitField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Calories:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
   <Label fx:id="calLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Carbs:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
   <Label fx:id="carbLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Protein:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
   <Label fx:id="proteinLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Fat:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
   <Label fx:id="fatLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Preferred meal:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <ComboBox fx:id="preferredBox" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Button fx:id="saveBtn" text="Save" GridPane.columnIndex="1" GridPane.rowIndex="9" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
