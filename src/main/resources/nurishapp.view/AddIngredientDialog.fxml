<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="ingredientEditPane" prefHeight="360" prefWidth="520" stylesheets="@AddIngredientDialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nurishapp.view.AddIngredientDialogController">

    <center>
        <VBox spacing="10">
            <padding><Insets bottom="14" left="16" right="16" top="14" /></padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="categoryLabel" minWidth="120" text="Category:" />
                <ComboBox fx:id="categoryBox" prefWidth="300" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="foodLabel" minWidth="120" text="Food:" />
                <ComboBox fx:id="foodBox" editable="true" prefWidth="300" />
            </HBox>

            <Separator />

            <Label fx:id="npsLabel" style="-fx-font-weight:bold;" text="Nutrition per serving:" />
            <Label fx:id="nutritionPerServingLabel" text="-" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="servingLabel" minWidth="120" text="Serving:" />
                <Spinner fx:id="servingSpinner" prefWidth="120" />
                <Label fx:id="servingUnitValue" text="" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets bottom="14" left="16" right="16" top="10" /></padding>
            <Button fx:id="cancelBtn" onAction="#handleCancel" text="Cancel" />
            <Button fx:id="addBtn" onAction="#handleAdd" text="Add" />
        </HBox>
    </bottom>
</BorderPane>
